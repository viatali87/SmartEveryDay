@model SmartEveryDay.Models.WaterModel

@{
    ViewBag.Title = "Water";
    
 }



<script src="https://code.jquery.com/jquery-1.8.3.min.js"></script>

<script type="text/javascript">

    $(document).ready(function () {
        
        var val = "nadina";



        $('#getRemoni').on('click', function () {
            console.log("GetRemoni JS started:");




            $.ajax({
                url: "/Water/getData",
                type: "Get",
                dataType: "json",
                data: { 'someId': val }



            }).done(function (response) {
                console.log(response);
                console.log("nadina molodec");
                $('#RemoniText').html("Here should be response from Remoni!");



            }).fail(function (response) {
                console.log("Ajax failed")
            }
            )

        });

   

    $('#btnclear').on('click', function () {
        $('#RemoniText').html("Here will be some text again");
      

    });

    })
</script>



<!-- html part for the page-->
<h2>Water</h2>

